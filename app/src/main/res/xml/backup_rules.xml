<?xml version="1.0" encoding="utf-8"?>
<!-- This file is for Android 11 and below (API 30-) for backup functionality -->
<full-backup-content>
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="."/>
    <!-- Include databases -->
    <include domain="database" path="."/>
    <!-- Include internal files -->
    <include domain="file" path="."/>
    <!-- Exclude cache directory -->
    <exclude domain="file" path="cache/"/>
    <!-- Exclude temporary files -->
    <exclude domain="file" path="tmp/"/>
    <!-- Exclude any no_backup directory -->
    <exclude domain="file" path="no_backup/"/>
</full-backup-content>